<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ryan.view_siso.activity.FindStuidActivity"
    tools:showIn="@layout/activity_find_stuid">



    <android.support.v7.widget.CardView
        android:id="@+id/cardview01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="20sp" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/stu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cardview01"
        android:layout_toRightOf="@+id/cardview01"
        android:text="汪晨阳"
        android:textSize="20sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardview02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview01"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textSize="20sp" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/stu_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cardview02"
        android:layout_alignLeft="@+id/stu_name"
        android:text="男"
        android:textSize="20sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardview03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview02"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学号"
            android:textSize="20sp" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/stu_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cardview03"
        android:layout_alignLeft="@+id/stu_name"
        android:text="130122104"
        android:textSize="20sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardview04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview03"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专业"
            android:textSize="20sp" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/Specialty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cardview04"
        android:layout_alignLeft="@+id/stu_name"
        android:text="软件技术(嵌入式软件人才培养)"
        android:textSize="20sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardview05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview04"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班级"
            android:textSize="20sp" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/Class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cardview05"
        android:layout_alignLeft="@+id/stu_name"
        android:text="软件13（6）"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/relativeLayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview05">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机"
                android:textSize="20sp" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/Mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cardview06"
            android:layout_toRightOf="@+id/cardview06"
            android:text="18860920506"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/image_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cardview06"
            android:layout_alignParentRight="true"
            android:src="@drawable/phone" />

    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/cardview07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout01"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ"
            android:textSize="20sp" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/QQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cardview07"
        android:layout_alignLeft="@+id/stu_name"
        android:text="921144715"
        android:textSize="20sp" />


    <RelativeLayout
        android:id="@+id/relativeLayout02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview07">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家长"
                android:textSize="20sp" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/FMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cardview08"
            android:layout_toRightOf="@+id/cardview08"
            android:text="13812390975"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/image_phone_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cardview08"
            android:layout_alignParentRight="true"
            android:src="@drawable/phone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout02">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家长"
                android:textSize="20sp" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/MMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cardview09"
            android:layout_toRightOf="@+id/cardview09"
            android:text="13033598080"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/image_phone_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cardview09"
            android:layout_alignParentRight="true"
            android:src="@drawable/phone" />
    </RelativeLayout>


</RelativeLayout>
